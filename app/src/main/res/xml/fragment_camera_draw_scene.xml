<?xml version="1.0" encoding="utf-8"?>
<MotionScene xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ConstraintSet android:id="@+id/cardTransitionShowStart">
        <Constraint
            android:id="@id/cardTextAcquired"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="16dp"
            android:alpha="0"
            android:visibility="invisible"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@id/guideline2"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </ConstraintSet>

    <ConstraintSet android:id="@+id/cardTransitionShowEnd">
        <Constraint
            android:id="@id/cardTextAcquired"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="16dp"
            android:alpha="1"
            android:visibility="visible"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@id/guideline2"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
        <Constraint
            android:id="@id/guideline2"
            app:layout_constraintGuide_percent="1" />
    </ConstraintSet>

    <Transition
        android:id="@+id/cardTransitionShow"
        app:constraintSetEnd="@id/cardTransitionShowEnd"
        app:constraintSetStart="@+id/cardTransitionShowStart" />


    <ConstraintSet android:id="@+id/cardDismissEnd">
        <Constraint
            android:id="@id/cardTextAcquired"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="16dp"
            android:alpha="0"
            android:visibility="invisible"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@id/guideline2"
            app:layout_constraintTop_toTopOf="parent" />

        <Constraint
            android:id="@id/guideline2"
            app:layout_constraintGuide_percent="0" />
    </ConstraintSet>

    <Transition
        android:id="@+id/cardDismiss"
        app:constraintSetEnd="@id/cardDismissEnd"
        app:constraintSetStart="@id/cardTransitionShowEnd">
        <KeyFrameSet>
            <KeyAttribute
                android:alpha="1"
                app:framePosition="0"
                app:motionTarget="@id/cardTextAcquired" />
            <KeyAttribute
                android:alpha="0"
                app:framePosition="90"
                app:motionTarget="@id/cardTextAcquired" />
        </KeyFrameSet>
    </Transition>
</MotionScene>
